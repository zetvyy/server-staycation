<div class="card shadow mb-4 mt-2">
  <div class="card-body">
    <a href="/admin/booking" class="btn btn-warning mb-5">Back</a>

    <div class="row">
      <div class="col-md-4">
        <h1 class="h3 mb-4 text-gray-800">Payment Proof</h1>
        <img
          src="https://admin-staycation.heroku.app/<%= booking.payments.proofPayment %>"
          alt="imageUrl"
          style="width: 100%; display: block"
        />
        <div class="row">
          <% if(booking.payments.status == "Proses") { %>
          <form
            action="/admin/booking/<%= booking.id %>/confirmation?_method=PUT"
            method="POST"
          >
            <button type="submit" class="btn btn-success ml-2">
              <i class="fas fa-check"></i> Confirmation
            </button>
          </form>
          <form
            action="/admin/booking/<%= booking.id %>/reject?_method=PUT"
            method="POST"
          >
            <button type="submit" class="btn btn-danger ml-2">
              <i class="fas fa-times"></i> Reject
            </button>
          </form>
          <% } %>
        </div>
      </div>
      <div class="col-md-8">
        <div class="table-responsive">
          <table
            class="table table-bordered"
            id="dataTableActivity"
            width="100%"
            cellspacing="0"
          >
            <thead>
              <tr>
                <th>Name</th>
                <th>Total</th>
                <th>Bank From</th>
                <th>Title</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <%= booking.memberId.firstName %> <%=
                  booking.memberId.lastName %>
                </td>
                <td><%= booking.total %></td>
                <td><%= booking.payments.bankFrom %></td>
                <td><%= booking.itemId.title %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
